import psycopg2


class Connection:
    CONNECTION_DB = {
        'workshop': {
            'HOST': 'localhost',
            'PORT': '5432',
            'USERNAME': 'postgres',
            'PASSWORD': 'coderslab',
            'DATABASE': 'workshop'
        },
        'admin': {
            'HOST': 'localhost',
            'PORT': '5432',
            'USERNAME': 'postgres',
            'PASSWORD': 'coderslab',
            'DATABASE': 'postgres'
        }
    }

    @classmethod
    def connect(cls, connection=CONNECTION_DB['workshop']):
        conn = psycopg2.connect(
            user=connection['USERNAME'],
            password=connection['PASSWORD'],
            host=connection['HOST'],
            port=connection['PORT'],
            dbname=connection['DATABASE']
        )
        conn.autocommit = True
        return conn
